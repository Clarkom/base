 <header class="fixed-top">
    <nav class="col-sm-9 ml-sm-auto col-md-10 navbar navbar-expand-md">

      <!-- Navigation -->
      <div class="collapse navbar-collapse">

        <!--  # Left -->
        <ul class="navbar-nav mr-auto">
          <li class="nav-item">
            <a href="#" id="collapse-aside">
              <i class="fa fa-navicon fa-lg"></i>
            </a>

          </li>
        </ul>

        <!-- # Right -->
        <ul class="user-dropdown">

          <!-- # -->
          <li><a href="#" class="fa fa-expand fa-lg"></a></li>

          <!-- # -->
          <li class="dropdown">
            <a class="user-pic" data-toggle="dropdown"
               href="#userMenuDropDown"
               aria-haspopup="true"
               aria-expanded="false"
               aria-controls="userMenuDropDown">

              <span class="pull-right">
                <% if current_manager.picture? %>
                  <%= `#{image_tag(current_manager.picture)} #{fa_icon 'caret-right'}` %>
                    <% else %>
                  <%= "#{image_tag('default-user.png')} #{fa_icon 'caret-down'}".html_safe %>
                <% end %>
              </span>
            </a>

            <!-- # Drop Down -->
            <ul class="dropdown-menu dropdown-menu-right" aria-labelledby="userMenuDropDown">

              <li class="dropdown-item">
                <% if current_manager.full_name %>
                  <span><%= t :signed_as %> <b><%= current_manager.full_name %></b></span>
                <% end %>
              </li>

              <li class="dropdown-item">
                <%= link_to destroy_manager_session_path, method: :delete do %>
                    <%= fa_icon 'close' %> <%= t :sign_out %>
                <% end %>
              </li>
            </ul>
          </li>
        </ul>

      </div>

    </nav>
 </header>
