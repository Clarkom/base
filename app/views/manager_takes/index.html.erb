<h4><%= t :manager_takes %></h4>

<!-- # -->
<div class="actions row">

  <div class="col-md-4">
    <%= link_to new_manager_take_path, :class => 'btn btn-info btn-sm' do %>
        <%= fa_icon 'plus' %> <%= t :add_a_new_manager_take %>
    <% end %>
  </div>

  <div class="col-md-4 ml-auto">
    <input type="search"
           class="form-control"
           id="search-manager-take"
           placeholder="<%= t :your_text %>..." aria-label="<%= t :your_text %>...">
  </div>

</div>


<!-- # -->
<table id="manager-take-data" class="table table-bordered">

  <thead>
    <tr>
      <th>Date</th>
      <th><%= t :amount %></th>
      <th class="td-actions">Actions</th>
    </tr>
  </thead>

  <tbody>
  <% @manager_takes.each do |manager_take| %>
    <tr>
      <td><%= manager_take.date %></td>
      <td><b><%= manager_take.income.amount %> DH</b></td>
      <td>
        <%= link_to manager_take, :class => 'btn btn-outline-dark btn-sm' do %>
            <%= fa_icon 'eye' %>
        <% end %>
        <%= link_to edit_manager_take_path(manager_take), :class => 'btn btn-outline-dark btn-sm' do %>
            <%= fa_icon 'pencil' %>
        <% end %>
        <%= link_to manager_take, method: :delete, data: {confirm: "#{t :are_you_sure}"}, class: 'btn btn-outline-dark btn-sm' do %>
            <%= fa_icon 'close' %>
        <% end %>
      </td>
    </tr>
  <% end %>
  </tbody>

  <tfoot>
    <tr class="table-sum">
      <td colspan="2"><b>Total</b></td>
      <td colspan="1">
        <b><%= @manager_takes_sum %> DH</b>
      </td>
    </tr>
  </tfoot>

</table>