<%= form_for @cab_model do |form| %>

    <div class="form-group row">
      <%= form.label "#{t :name}", class: 'col-sm-2 col-form-label' %>
      <div class="col-sm-10">
        <%= form.text_field :name, class: 'form-control' %>
        <% if !@cab_model.errors.messages[:'name'].empty?  %>
            <ul>
              <% @cab_model.errors.messages[:'name'].each do |message| %>
                  <li>
                    <small class="form-text text-muted text-error"><%= message %></small>
                  </li>
              <% end %>
            </ul>
        <% end %>
      </div>
    </div>

    <div class="form-group row">
      <%= form.label "#{t :manufacturer_year}", class: 'col-sm-2 col-form-label' %>
      <div class="col-sm-10">
        <%= form.date_field :manufacture_year, class: 'form-control' %>
        <% if !@cab_model.errors.messages[:'manufacture_year'].empty?  %>
            <ul>
              <% @cab_model.errors.messages[:'manufacture_year'].each do |message| %>
                  <li>
                    <small class="form-text text-muted text-error"><%= message %></small>
                  </li>
              <% end %>
            </ul>
        <% end %>
      </div>
    </div>

    <div class="form-group row">
      <%= form.label "#{t :fuel_types}", class: 'col-sm-2 col-form-label' %>
      <div class="col-sm-10">
        <%= form.collection_select :fuel_type_id, FuelType.group(:name), :id, :name, {
          :multiple => false,
          :include_blank => 'Select a Fuel Type',
        },{ class: 'form-control' }
        %>
        <% if !@cab_model.errors.messages[:'fuel_type_id'].empty?  %>
            <ul>
              <% @cab_model.errors.messages[:'fuel_type_id'].each do |message| %>
                  <li>
                    <small class="form-text text-muted text-error"><%= message %></small>
                  </li>
              <% end %>
            </ul>
        <% end %>
      </div>
    </div>

    <div class="form-group row">
      <%= form.label "#{t :sheet_metal}", class: 'col-sm-2 col-form-label' %>
      <div class="col-sm-10">
        <%= form.text_field :sheet_metal, class: 'form-control' %>
        <% if !@cab_model.errors.messages[:'sheet_metal'].empty?  %>
            <ul>
              <% @cab_model.errors.messages[:'sheet_metal'].each do |message| %>
                  <li>
                    <small class="form-text text-muted text-error"><%= message %></small>
                  </li>
              <% end %>
            </ul>
        <% end %>
      </div>
    </div>

    <div class="form-group row">
      <%= form.label "#{t :power_hp}", class: 'col-sm-2 col-form-label' %>
      <div class="col-sm-10">
        <%= form.number_field :power_hp, class: 'form-control' %>
        <% if !@cab_model.errors.messages[:'power_hp'].empty?  %>
            <ul>
              <% @cab_model.errors.messages[:'power_hp'].each do |message| %>
                  <li>
                    <small class="form-text text-muted text-error"><%= message %></small>
                  </li>
              <% end %>
            </ul>
        <% end %>
      </div>
    </div>

    <div class="form-group row">
      <%= form.label "#{t :number_of_places}", class: 'col-sm-2 col-form-label' %>
      <div class="col-sm-10">
        <%= form.number_field :number_places, class: 'form-control' %>
        <% if !@cab_model.errors.messages[:'number_places'].empty?  %>
            <ul>
              <% @cab_model.errors.messages[:'number_places'].each do |message| %>
                  <li>
                    <small class="form-text text-muted text-error"><%= message %></small>
                  </li>
              <% end %>
            </ul>
        <% end %>
      </div>
    </div>

    <div class="form-group row">
      <%= form.label 'Description', class: 'col-sm-2 col-form-label' %>
      <div class="col-sm-10">
        <%= form.text_area :description, class: 'form-control' %>
        <% if !@cab_model.errors.messages[:'description'].empty?  %>
            <ul>
              <% @cab_model.errors.messages[:'description'].each do |message| %>
                  <li>
                    <small class="form-text text-muted text-error"><%= message %></small>
                  </li>
              <% end %>
            </ul>
        <% end %>
      </div>
    </div>

    <div class="actions">
      <%= form.submit "#{t :save}", :class => 'btn btn-info' %>
    </div>

<% end %>