<p id="notice"><%= notice %></p>

<h1>Cab Models</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Manufacture year</th>
      <th>Fuel type</th>
      <th>Sheet metal</th>
      <th>Power hp</th>
      <th>Number places</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @cab_models.each do |cab_model| %>
      <tr>
        <td><%= cab_model.name %></td>
        <td><%= cab_model.description %></td>
        <td><%= cab_model.manufacture_year %></td>
        <td><%= cab_model.fuel_type.name %></td>
        <td><%= cab_model.sheet_metal %></td>
        <td><%= cab_model.power_hp %></td>
        <td><%= cab_model.number_places %></td>
        <td><%= link_to 'Show', cab_model %></td>
        <td><%= link_to 'Edit', edit_cab_model_path(cab_model) %></td>
        <td><%= link_to 'Destroy', cab_model, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

