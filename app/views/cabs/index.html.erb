<p id="notice"><%= notice %></p>

<h1>Cabs</h1>

<table>
  <thead>
    <tr>
      <th>Cab model</th>
      <th>License plate</th>
      <th>Agreement number</th>
      <th>Total mileage</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @cabs.each do |cab| %>
      <tr>
        <td><%= cab.cab_model.name %></td>
        <td><%= cab.license_plate %></td>
        <td><%= cab.agreement_number %></td>
        <td><%= number_with_delimiter(cab.total_mileage) %> km(s)</td>
        <td><%= link_to 'Show', cab %></td>
        <td><%= link_to 'Edit', edit_cab_path(cab) %></td>
        <td><%= link_to 'Destroy', cab, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

