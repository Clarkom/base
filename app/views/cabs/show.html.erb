<h4><%= t :vehicle %> - <%= t :detail %></h4>

<table class="table table-bordered table-responsive">
  <thead>
    <tr>
      <th><%= t :license_plate %></th>
      <th><%= t :agreement_number %></th>
      <th><%= t :mileage %></th>
      <th>Manager</th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <td><%= @cab.license_plate %></td>
      <td><%= @cab.agreement_number %></td>
      <td><%= @cab.total_mileage %> km(s)</td>
      <td><%= Manager.find(@cab.manager_id).email %></td>
    </tr>
  </tbody>
</table>


<%= link_to cabs_path, :class => 'badge badge-light' do %>
    <%= fa_icon 'arrow-left' %> <%= t :go_back %>
<% end %>

<%= link_to edit_cab_path(@cab), :class => 'badge badge-dark' do %>
    <%= fa_icon 'pencil' %> <%= t :edit %>
<% end %>
