<%= form_for @cab do |form| %>

    <div class="form-group row">
      <%= form.label 'Marque', class: 'col-sm-2 col-form-label' %>
      <div class="col-sm-10">
        <%= form.collection_select :cab_model_id, CabModel.group(:name), :id, :name, {
          :multiple => false,
          :include_blank => 'Select a Model',
        },{ class: 'form-control' }
        %>
        <% if !@cab.errors.messages[:'cab_model'].empty?  %>
            <ul>
              <% @cab.errors.messages[:'cab_model'].each do |message| %>
                  <li>
                    <small class="form-text text-muted text-error"><%= message %></small>
                  </li>
              <% end %>
            </ul>
        <% end %>
      </div>
    </div>

    <div class="form-group row">
      <%= form.label 'License Plate', class: 'col-sm-2 col-form-label' %>
      <div class="col-sm-10">
        <%= form.text_field :license_plate, class: 'form-control' %>
        <% if !@cab.errors.messages[:'license_plate'].empty?  %>
            <ul>
              <% @cab.errors.messages[:'license_plate'].each do |message| %>
                  <li>
                    <small class="form-text text-muted text-error"><%= message %></small>
                  </li>
              <% end %>
            </ul>
        <% end %>
      </div>
    </div>

    <div class="form-group row">
      <%= form.label 'Agreement Number', class: 'col-sm-2 col-form-label' %>
      <div class="col-sm-10">
        <%= form.text_field :agreement_number, class: 'form-control' %>
        <% if !@cab.errors.messages[:'agreement_number'].empty?  %>
            <ul>
              <% @cab.errors.messages[:'agreement_number'].each do |message| %>
                  <li>
                    <small class="form-text text-muted text-error"><%= message %></small>
                  </li>
              <% end %>
            </ul>
        <% end %>
      </div>
    </div>

    <div class="form-group row">
      <%= form.label 'Kilometrage', class: 'col-sm-2 col-form-label' %>
      <div class="col-sm-10">
        <%= form.text_field :total_mileage, class: 'form-control' %>
      </div>
    </div>

    <div class="form-group row">
      <%= form.label 'Manager', class: 'col-sm-2 col-form-label' %>
      <div class="col-sm-10">
        <%= form.collection_select :manager_id, Manager.group(:email), :id, :email, {
          :multiple => false,
          :include_blank => 'Select a Manager',
        }, {class: 'form-control'} %>
        <% if !@cab.errors.messages[:'manager'].empty?  %>
            <ul>
              <% @cab.errors.messages[:'manager'].each do |message| %>
                  <li>
                    <small class="form-text text-muted text-error"><%= message %></small>
                  </li>
              <% end %>
            </ul>
        <% end %>
      </div>
    </div>

    <div class="actions">
      <%= form.submit 'Save', :class => 'btn btn-info' %>
    </div>

<% end %>
