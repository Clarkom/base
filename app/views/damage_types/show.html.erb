<h4><%= "#{t :damage_type} - #{t :detail}" %></h4>

<table class="table table-bordered">
  <thead>
  <tr>
    <th>Type</th>
  </tr>
  </thead>
  <tbody>
  <tr>
    <td><%= @damage_type.name %></td>
  </tr>
  </tbody>
</table>

<%= link_to damage_types_path, :class => 'badge badge-light' do %>
    <%= fa_icon 'arrow-left' %> <%= t :go_back %>
<% end %>

<%= link_to edit_damage_type_path(@damage_type), :class => 'badge badge-dark' do %>
    <%= fa_icon 'pencil' %> <%= t :edit %>
<% end %>