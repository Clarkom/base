<h4><%= "#{t :damage} - #{t :detail}" %></h4>

<table class="table table-bordered table-responsive">
  <thead>
  <tr>
    <th>Cause</th>
    <% if @damage.driver_id %>
    <th><%= t :driver %></th>
    <% end %>
    <th>Date</th>
    <th><%= t :mileage %></th>
    <th><%= t :labor %></th>
    <th><%= t :amount %></th>
  </tr>
  </thead>
  <tbody>
  <tr>
    <td><%= DamageType.find(@damage.damage_type.id).name %></td>
    <% if @damage.driver_id %>
    <td><%= Driver.find(@damage.driver_id).full_name %></td>
    <% end %>
    <td><%= @damage.date %></td>
    <td><%= @damage.kilometers %></td>
    <td><%= @damage.labor %></td>
    <td><%= Expense.find(@damage.expense.id).amount %> DH</td>
  </tr>
  </tbody>
</table>

<%= link_to damages_path, :class => 'badge badge-light' do %>
    <%= fa_icon 'arrow-left' %> <%= t :go_back %>
<% end %>

<%= link_to edit_damage_path(@damage), :class => 'badge badge-dark' do %>
    <%= fa_icon 'pencil' %> <%= t :edit %>
<% end %>

