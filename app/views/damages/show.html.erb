<h4>Damage Detail</h4>

<table class="table table-bordered">
  <thead>
  <tr>
    <th>Cause</th>
    <% if @damage.driver_id %>
    <th>Driver</th>
    <% end %>
    <th>Date</th>
    <th>Kilometers</th>
    <th>Labor</th>
    <th>Amount</th>
  </tr>
  </thead>
  <tbody>
  <tr>
    <td><%= DamageType.find(@damage.damage_type.id).name %></td>
    <% if @damage.driver_id %>
    <td><%= Driver.find(@damage.driver_id).full_name %></td>
    <% end %>
    <td><%= @damage.date %></td>
    <td><%= @damage.kilometers %></td>
    <td><%= @damage.labor %></td>
    <td><%= Expense.find(@damage.expense.id).amount %> DH</td>
  </tr>
  </tbody>
</table>

<%= link_to damages_path, :class => 'badge badge-light' do %>
    <%= fa_icon 'arrow-left' %> Retour
<% end %>

<%= link_to edit_damage_path(@damage), :class => 'badge badge-dark' do %>
    <%= fa_icon 'pencil' %> Edit
<% end %>

