<h4><%= t :fuel_types %></h4>

<!-- # -->
<div class="actions row">

  <div class="col-md-4">
    <%= link_to new_fuel_type_path, :class => 'btn btn-info btn-sm' do %>
        <%= fa_icon 'plus' %> <%= t :add_a_new_fuel_type %>
    <% end %>
  </div>

  <div class="col-md-4 ml-auto">
    <input type="search"
           class="form-control"
           id="search-fuel-type"
           placeholder="<%= t :your_text %>..." aria-label="<%= t :your_text %>...">
  </div>

</div>

<!-- # -->
<table id="fuel-type-data" class="responsive-table">
  <thead>
  <tr>
    <th scope="col"><%= t :name %></th>
    <th scope="col" class="td-actions">Actions</th>
  </tr>
  </thead>

  <tbody>
  <% @fuel_types.each do |fuel_type| %>
      <tr>
        <th scope="row"><%= fuel_type.name %></th>
        <td>
          <%= link_to fuel_type, :class => 'btn btn-outline-dark btn-sm' do %>
              <%= fa_icon 'eye' %>
          <% end %>
          <%= link_to edit_fuel_type_path(fuel_type), :class => 'btn btn-outline-dark btn-sm' do %>
              <%= fa_icon 'pencil' %>
          <% end %>
          <%= link_to fuel_type, method: :delete, data: { confirm: "#{t :are_you_sure}" }, class: 'btn btn-outline-dark btn-sm' do %>
              <%= fa_icon 'trash' %>
          <% end %>
        </td>
      </tr>
  <% end %>
  </tbody>

</table>