              <% end %>
            </ul>
        <% end %>
      </div>
    </div>

    <div class="form-group row">
      <%= form.label 'Home Phone', class: 'col-sm-2 col-form-label' %>
      <div class="col-sm-10">
        <%= form.text_field :home_phone, class: 'form-control' %>
