<%= form_for @driver do |form| %>

    <div class="form-group row">
      <%= form.label "#{t :full_name}", class: 'col-sm-2 col-form-label' %>
      <div class="col-sm-10">
        <%= form.text_field :full_name, class: 'form-control' %>
        <% if !@driver.errors.messages[:'full_name'].empty?  %>
            <ul>
              <% @driver.errors.messages[:'full_name'].each do |message| %>
                  <li>
                    <small class="form-text text-muted text-error"><%= message %></small>
                  </li>
              <% end %>
            </ul>
        <% end %>
      </div>
    </div>

    <div class="form-group row global_date">
      <%= form.label "#{t :birth_date}", class: 'col-sm-2 col-form-label' %>
      <div class="col-sm-10">

        <% if @driver.birth_date %>
            <%= form.text_field :birth_date, class: 'form-control', value: format_date(@driver.birth_date, "%Y-%m-%d", "%d/%m/%Y") %>
        <% else %>
            <%= form.text_field :birth_date, class: 'form-control' %>
        <% end %>

        <% if !@driver.errors.messages[:'birth_date'].empty?  %>
            <ul>
              <% @driver.errors.messages[:'birth_date'].each do |message| %>
                  <li>
                    <small class="form-text text-muted text-error"><%= message %></small>
                  </li>
              <% end %>
            </ul>
        <% end %>
      </div>
    </div>

