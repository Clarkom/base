<h4><%= t :owners %></h4>

<!-- # -->
<div class="actions row">

  <div class="col-md-4">
    <%= link_to new_owner_path, :class => 'btn btn-info btn-sm' do %>
        <%= fa_icon 'plus' %> <%= t :add_a_new_owner %>
    <% end %>
  </div>

  <div class="col-md-4 ml-auto">
    <input type="search"
           class="form-control"
           id="search-owner"
           placeholder="<%= t :your_text %>..." aria-label="<%= t :your_text %>...">
  </div>

</div>

<!-- # -->
<table id="owner-data" class="responsive-table">
  <thead>
    <tr>
      <th scope="col"><%= t :full_name %></th>
      <th scope="col"><%= t :home_phone %></th>
      <th scope="col"><%= t :mobile_phone %></th>
      <th scope="col" class="td-actions">Actions</th>
    </tr>
  </thead>

  <tbody>
  <% @owners.each do |owner| %>
      <tr>
        <th scope="row"><%= owner.full_name %></th>
        <td data-title="<%= t :home_phone %>"><%= owner.home_phone %></td>
        <td data-title="<%= t :mobile_phone %>"><%= owner.mobile_phone %></td>
        <td class="btn-actions">
          <%= link_to owner, :class => 'btn btn-outline-dark btn-sm' do %>
              <%= fa_icon 'eye' %>
          <% end %>
          <%= link_to edit_owner_path(owner), :class => 'btn btn-outline-dark btn-sm' do %>
              <%= fa_icon 'pencil' %>
          <% end %>
          <%= link_to owner, method: :delete, data: {confirm: "#{t :are_you_sure}"}, class: 'btn btn-outline-dark btn-sm' do %>
              <%= fa_icon 'close' %>
          <% end %>
        </td>
      </tr>
  <% end %>
  </tbody>

</table>


