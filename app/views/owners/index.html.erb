<h4>Taxis</h4>

<!-- # -->
<div class="actions row">

  <div class="col-md-4">
    <%= link_to new_owner_path, :class => 'btn btn-info btn-sm' do %>
        <%= fa_icon 'plus' %> Add a New Owner
    <% end %>
  </div>

  <div class="col-md-4 ml-auto">
    <input type="search"
           class="form-control"
           id="search-owner"
           placeholder="Votre Recherche..." aria-label="Votre Recherche...">
  </div>

</div>

<!-- # -->
<table id="owner-data" class="table table-bordered">
  <thead>
    <tr>
      <th>Nom Complet</th>
      <th>Telephone Fixe</th>
      <th>Telephone Mobile</th>
      <th class="td-actions">Actions</th>
    </tr>
  </thead>

  <tbody>
  <% @owners.each do |owner| %>
      <tr>
        <td><%= owner.full_name %></td>
        <td><%= owner.home_phone %></td>
        <td><%= owner.mobile_phone %></td>
        <td>
          <%= link_to owner, :class => 'btn btn-outline-dark btn-sm' do %>
              <%= fa_icon 'eye' %>
          <% end %>
          <%= link_to edit_owner_path(owner), :class => 'btn btn-outline-dark btn-sm' do %>
              <%= fa_icon 'pencil' %>
          <% end %>
          <%= link_to owner, method: :delete, data: {confirm: 'ÃŠtes vous sur?'}, class: 'btn btn-outline-dark btn-sm' do %>
              <%= fa_icon 'close' %>
          <% end %>
        </td>
      </tr>
  <% end %>
  </tbody>

</table>


