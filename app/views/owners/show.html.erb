<h4><%= "#{t :owner} - #{t :detail}" %></h4>

<table class="table table-bordered table-responsive">
  <thead>
  <tr>
    <th><%= t :full_name %></th>
    <th><%= t :home_phone %></th>
    <th><%= t :mobile_phone %></th>
  </tr>
  </thead>
  <tbody>
  <tr>
    <td><%= @owner.full_name %></td>
    <td><%= @owner.home_phone %></td>
    <td><%= @owner.mobile_phone %></td>
  </tr>
  </tbody>
</table>

<%= link_to owners_path, :class => 'badge badge-light' do %>
    <%= fa_icon 'arrow-left' %> <%= t :go_back %>
<% end %>

<%= link_to edit_owner_path(@owner), :class => 'badge badge-dark' do %>
    <%= fa_icon 'pencil' %> <%= t :edit %>
<% end %>
