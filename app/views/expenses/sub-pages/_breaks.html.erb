<div class="card">
    <div class="card-body">

      <!-- # -->
      <h4 class="card-title">
        <%= t 'breaks' %>
        <b class="badge badge-info">
          <%= number_to_currency(Break.includes(:expense).pluck(:amount).sum, unit: '', separator: ',', delimiter: '', precision: 1) %> DH
        </b>
      </h4>

      <!-- # -->
      <% if !Break.all.empty? %>

        <table class="table table-bordered table-responsive">
          <thead>
          <tr>
            <th>Cause</th>
            <th><%= t :delay %></th>
            <th><%= t :amount %></th>
          </tr>
          </thead>

          <tbody>
          <% Break.all.limit(3).each do |b| %>
              <tr>
                <td>
                  <%= link_to b do %>
                      <%= b.break_cause.name %>
                  <% end %>
                </td>
                <td><%= (b.end_date - b.start_date).to_i %> <%= t :days %></td>
                <td><b><%= b.expense.amount %> DH</b></td>
              </tr>
          <% end %>
          </tbody>

        </table>

        <!-- # -->
        <div class="col-md-12">
          <%= link_to new_break_path, :class => 'btn btn-sm btn-info' do %>
              <%= fa_icon 'plus' %> <%= t :add_a_new_break %>
          <% end %>
          <%= link_to breaks_path, :class => 'btn btn-sm btn-secondary' do %>
              <%= fa_icon 'list' %> <%= t 'show_more' %>
          <% end %>
        </div>

        <% else %>
          <h5><%= t :no_data %></h5>
          <%= link_to new_break_path, :class => 'btn btn-sm btn-info' do %>
              <%= fa_icon 'plus' %> <%= t :add_a_new_break %>
          <% end %>
      <% end %>


    </div>
  </div>
