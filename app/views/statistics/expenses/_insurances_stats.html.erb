<div class="col-sm-12">
  <div class="card">
    <div class="card-body">

      <h4 class="card-title">
        <%= t :insurances %>
        <b class="badge badge-info">
          <%= number_to_currency(Insurance.insurances_sum, unit: '', separator: ',', delimiter: '', precision: 1) %> DH
        </b>
      </h4>

      <!-- # Canvas -->
      <canvas id="InsurancesExpenses">
        <% Insurance.all.each do |insurance| %>
          <ul>
            <li><%= insurance.start_date.to_s.to_i %>/<%= (insurance.start_date + 1.year).to_s.to_i %></li>
            <li><b><%= insurance.expense.amount %> DH</b></li>
          </ul>
        <% end %>
      </canvas>

    </div>
  </div>
</div>