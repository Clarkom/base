<h4>Assurances</h4>

<!-- # -->
<div class="actions row">

  <div class="col-md-4">
    <%= link_to new_insurance_path, :class => 'btn btn-info btn-sm' do %>
        Ajouter une nouvelle Assurance
    <% end %>
  </div>

  <div class="col-md-4 ml-auto">
    <input type="search"
           class="form-control"
           id="search-insurance"
           placeholder="Votre Recherche..." aria-label="Votre Recherche...">
  </div>

</div>

<!-- # -->
<table id="insurance-data" class="table table-bordered">
  <thead>
    <tr>
      <th>Assureur</th>
      <th>Date de DÃ©but</th>
      <th>Date d'expiration</th>
      <th>Montant en DH</th>
      <th class="td-actions">Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @insurances.each do |insurance| %>
      <tr>
        <td><%= insurance.insurer.name %></td>
        <td><%= insurance.start_date %></td>
        <td><%= insurance.expiration_date %></td>
        <td><b><%= insurance.expense.amount %></b></td>
        <td>
          <div class="dropdown">
            <%= link_to insurance, :class => 'btn btn-outline-dark btn-sm' do %>
                <%= fa_icon 'eye' %>
            <% end %>
            <%= link_to edit_insurance_path(insurance), :class => 'btn btn-outline-dark btn-sm' do %>
                <%= fa_icon 'pencil' %>
            <% end %>
            <%= link_to insurance, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-outline-dark btn-sm' do %>
                <%= fa_icon 'close' %>
            <% end %>
          </div>
        </td>
      </tr>
    <% end %>

  </tbody>

  <tfoot>
    <tr class="table-sum">
      <td colspan="3"><b>Total</b></td>
      <td colspan="2">
        <b><%= @insurances_sum %> DH</b>
      </td>
    </tr>
  </tfoot>

</table>
