<h4><%= t :insurances %></h4>

<!-- # -->
<div class="actions row">

  <div class="col-md-4">
    <%= link_to new_insurance_path, :class => 'btn btn-info btn-sm' do %>
        <%= fa_icon 'plus' %> <%= t :add_a_new_insurance %>
    <% end %>
  </div>

  <div class="col-md-4 ml-auto">
    <input type="search"
           class="form-control"
           id="search-insurance"
           placeholder="<%= t :your_text %>..." aria-label="<%= t :your_text %>...">
  </div>

</div>

<!-- # -->
<table id="insurance-data" class="table table-bordered">
  <thead>
    <tr>
      <th><%= t :insurer %></th>
      <th><%= t :insurance %> Document</th>
      <th><%= t :starting_date %></th>
      <th><%= t :expiration_date %></th>
      <th><%= t :amount %></th>
      <th class="td-actions">Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @insurances.each do |insurance| %>
      <tr>
        <td><%= insurance.insurer.name %></td>
        <td><%= insurance.expense.attached_file.file ? image_tag(insurance.expense.attached_file, width: 159, height: 220) : 'No Document' %></td>
        <td><%= insurance.start_date %></td>
        <td><%= insurance.expiration_date %></td>
        <td><b><%= insurance.expense.amount %> DH</b></td>
        <td>
          <%= link_to insurance, :class => 'btn btn-outline-dark btn-sm' do %>
              <%= fa_icon 'eye' %>
          <% end %>
          <%= link_to edit_insurance_path(insurance), :class => 'btn btn-outline-dark btn-sm' do %>
              <%= fa_icon 'pencil' %>
          <% end %>
          <%= link_to insurance, method: :delete, data: { confirm: "#{t :are_you_sure}" }, class: 'btn btn-outline-dark btn-sm' do %>
              <%= fa_icon 'close' %>
          <% end %>
        </td>
      </tr>
    <% end %>

  </tbody>

  <tfoot>
    <tr class="table-sum">
      <td colspan="4"><b>Total</b></td>
      <td colspan="2">
        <b><%= @insurances_sum %> DH</b>
      </td>
    </tr>
  </tfoot>

</table>
