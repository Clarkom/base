<div class="devise col-md-4">

  <%= render 'devise/shared/logo' %>

  <div class="card-box">

    <div class="text-center">
      <h3><%= t :sign_up %></h3>
    </div>

    <div class="panel-body">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= devise_error_messages! %>

          <div class="form-group">
            <%= f.email_field :email, autofocus: true, class: 'form-control', placeholder: 'Email' %>
          </div>

          <div class="form-group">
            <% if @minimum_password_length %>
                <em>(<%= @minimum_password_length %> <%= t :characters_minimum %>)</em>
            <% end %>
            <%= f.password_field :password, autocomplete: 'off', class: 'form-control', placeholder: "#{t :password}" %>
          </div>

          <div class="form-group">
            <%= f.password_field :password_confirmation, autocomplete: 'off', class: 'form-control', placeholder: "#{t :password_confirmation}" %>
          </div>

          <%= f.submit "#{t :sign_up}", class: 'btn btn-info' %>

      <% end %>

    </div>

  </div>

  <div class="sublink">
    <%= t :already_have_an_account %>?
    <%= link_to "#{t :login}", new_session_path(resource_name) %>
  </div>

</div>
