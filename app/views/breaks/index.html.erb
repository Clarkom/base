<h4><%= t :breaks %></h4>

<!-- # -->
<div class="actions row">

  <div class="col-md-4">
    <%= link_to new_break_path, :class => 'btn btn-info btn-sm' do %>
        <%= fa_icon 'plus' %> <%= t :add_a_new_break %>
    <% end %>
  </div>

  <div class="col-md-4 ml-auto">
    <input type="search"
           class="form-control"
           id="search-break"
           placeholder="<%= t :your_text %>..." aria-label="<%= t :your_text %>...">
  </div>

</div>

<!-- # -->
<table id="break-data" class="table table-bordered">
  <thead>
    <tr>
      <th>Cause</th>
      <th><%= t :starting_date %></th>
      <th><%= t :end_date %></th>
      <th><%= t :delay %></th>
      <th><%= t :amount %></th>
      <th class="td-actions">Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @breaks.each do |b| %>
      <tr>
        <td><%= b.break_cause.name %></td>
        <td><%= b.start_date %></td>
        <td><%= b.end_date %></td>
        <td><%= (b.end_date - b.start_date).to_i %> <%= t :days %></td>
        <td><b><%= b.expense.amount %> DH</b></td>
        <td>
          <%= link_to b, :class => 'btn btn-outline-dark btn-sm' do %>
              <%= fa_icon 'eye' %>
          <% end %>
          <%= link_to edit_break_path(b), :class => 'btn btn-outline-dark btn-sm' do %>
              <%= fa_icon 'pencil' %>
          <% end %>
          <%= link_to b, method: :delete, data: { confirm: "#{t :are_you_sure}" }, class: 'btn btn-outline-dark btn-sm' do %>
              <%= fa_icon 'close' %>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>

  <tfoot>
    <tr class="table-sum">
      <td colspan="4"><b>Total</b></td>
      <td colspan="2">
        <b><%= @breaks_sum %> DH</b>
      </td>
    </tr>
  </tfoot>

</table>