<p id="notice"><%= notice %></p>

<h1>Breaks</h1>

<table>
  <thead>
    <tr>
      <th>Expense</th>
      <th>Start date</th>
      <th>End date</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @breaks.each do |b| %>
      <tr>
        <td><%= b.expense %></td>
        <td><%= b.start_date %></td>
        <td><%= b.end_date %></td>
        <td><%= link_to 'Show', b %></td>
        <td><%= link_to 'Edit', edit_break_path(b) %></td>
        <td><%= link_to 'Destroy', b, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

