<h4><%= "#{t :break} - #{t :detail}" %></h4>

<table class="table table-bordered table-responsive">
  <thead>
  <tr>
    <th>Cause</th>
    <th><%= t :starting_date %></th>
    <th><%= t :end_date %></th>
    <th><%= t :delay %></th>
    <th><%= t :amount %></th>
  </tr>
  </thead>
  <tbody>
  <tr>
    <td><%= BreakCause.find(@break.break_cause_id).name %></td>
    <td><%= @break.start_date %></td>
    <td><%= @break.end_date %></td>
    <td><%= (@break.end_date - @break.start_date).to_i %> <%= t :days %></td>
    <td><%= Expense.find(@break.expense.id).amount %> DH</td>
  </tr>
  </tbody>
</table>

<%= link_to breaks_path, :class => 'badge badge-light' do %>
    <%= fa_icon 'arrow-left' %> <%= t :go_back %>
<% end %>

<%= link_to edit_break_path(@break), :class => 'badge badge-dark' do %>
    <%= fa_icon 'pencil' %> <%= t :edit %>
<% end %>