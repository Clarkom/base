<p id="notice"><%= notice %></p>

<h1>Managers</h1>

<table>
  <thead>
    <tr>
      <th>Full name</th>
      <th>Home phone</th>
      <th>Mobile phone</th>
      <th>Birth date</th>
      <th>Cin</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @managers.each do |manager| %>
      <tr>
        <td><%= manager.full_name %></td>
        <td><%= manager.home_phone %></td>
        <td><%= manager.mobile_phone %></td>
        <td><%= manager.birth_date %></td>
        <td><%= manager.cin %></td>
        <td><%= link_to 'Show', manager %></td>
        <td><%= link_to 'Edit', edit_manager_path(manager) %></td>
        <td><%= link_to 'Destroy', manager, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

