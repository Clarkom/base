<h4><%= t :insurers %></h4>

<!-- # -->
<div class="actions row">

  <div class="col-md-4">
    <%= link_to new_insurer_path, :class => 'btn btn-info btn-sm' do %>
        <%= fa_icon 'plus' %> <%= t :add_a_new_insurer %>
    <% end %>
  </div>

  <div class="col-md-4 ml-auto">
    <input type="search"
           class="form-control"
           id="search-insurer"
           placeholder="<%= t :your_text %>..." aria-label="<%= t :your_text %>...">
  </div>

</div>

<!-- # -->
<table id="insurer-data" class="responsive-table">
  <thead>
  <tr>
    <th scope="col"><%= t :name %></th>
    <th scope="col"><%= t :picture %></th>
    <th scope="col"><%= t :address%></th>
    <th scope="col"><%= t :phone %></th>
    <th scope="col" class="td-actions">Actions</th>
  </tr>
  </thead>

  <tbody>
  <% @insurers.each do |insurer| %>
      <tr>
        <th scope="row"><%= insurer.name %></th>
        <td data-title="<%= t :picture %>">
          <%= insurer.picture.file ? image_tag(insurer.picture, width: 100, height: 100) : 'No Picture' %>
        </td>
        <td data-title="<%= t :address %>"><%= insurer.address %></td>
        <td data-title="<%= t :phone %>">0<%= insurer.phone %></td>
        <td>
          <%= link_to insurer, :class => 'btn btn-outline-dark btn-sm' do %>
              <%= fa_icon 'eye' %>
          <% end %>
          <%= link_to edit_insurer_path(insurer), :class => 'btn btn-outline-dark btn-sm' do %>
              <%= fa_icon 'pencil' %>
          <% end %>
          <%= link_to insurer, method: :delete, data: { confirm: "#{t :are_you_sure}" }, class: 'btn btn-outline-dark btn-sm' do %>
              <%= fa_icon 'trash' %>
          <% end %>
        </td>
      </tr>
  <% end %>
  </tbody>

</table>
