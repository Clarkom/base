<h4><%= "#{t :owner_takes} - #{t :detail}" %></h4>

<table class="table table-bordered table-responsive">
  <thead>
  <tr>
    <th><%= t :owner %></th>
    <th>Date</th>
    <th><%= t :amount %></th>
  </tr>
  </thead>
  <tbody>
  <tr>
    <td><%= Owner.find(@owner_take.owner_id).full_name %></td>
    <td><%= @owner_take.date %></td>
    <td><%= Expense.find(@owner_take.expense_id).amount %> DH</td>
  </tr>
  </tbody>
</table>

<%= link_to owner_takes_path, :class => 'badge badge-light' do %>
    <%= fa_icon 'arrow-left' %> <%= t :go_back %>
<% end %>

<%= link_to edit_owner_take_path(@owner_take), :class => 'badge badge-dark' do %>
    <%= fa_icon 'pencil' %> <%= t :edit %>
<% end %>

